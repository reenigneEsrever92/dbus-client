    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'dbus-client'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=dbus-client",
                    "--package=dbus-client"
                ],
                "filter": {
                    "name": "dbus-client",
                    "kind": "bin"
                }
            },
            "args": ["c", "org.gnome.Shell", "/org/gnome/Shell", "org.gnome.Shell.Extensions", "ListExtensions", "-a", "{  }"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'dbus-client'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=dbus-client",
                    "--package=dbus-client"
                ],
                "filter": {
                    "name": "dbus-client",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}